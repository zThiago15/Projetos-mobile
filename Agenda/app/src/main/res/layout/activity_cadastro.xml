<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Cadastro">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text="Cadastro Agenda"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    
    <EditText
        android:id="@+id/txnome"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:text="Nome: "
        android:inputType="textPersonName"/>


    <EditText
        android:id="@+id/txemail"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:text="Email: "
        android:inputType="textEmailAddress"/>


    <EditText
        android:id="@+id/txcelular"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:text="Celular: "
        android:inputType="phone" />


    <EditText
        android:id="@+id/txtelefone"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:text="Telefone: "
        android:inputType="phone"/>

    <EditText
        android:id="@+id/txendereco"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:text="EndereÃ§o: "
        android:inputType="textPostalAddress" />


    <EditText
        android:id="@+id/txbairro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Bairro: " />

    <EditText
        android:id="@+id/txcidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Cidade: " />

    <EditText
        android:id="@+id/txestado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Estado: " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLimpar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Limpar" />

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Salvar" />

        <Button
            android:id="@+id/btnExcluir"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Excluir" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Cadastro">

        <ListView
            android:id="@+id/listViewPessoas"
            android:layout_width="match_parent"
            android:layout_height="247dp" />
    </LinearLayout>
</LinearLayout>