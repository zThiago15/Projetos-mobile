<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Cadastro">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:text="Cadastro Agenda"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <EditText
            android:id="@+id/txcodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Codigo"
            android:enabled="false"
            android:inputType="number" />

        <EditText
            android:id="@+id/txnome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/txcelular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Celular"
            android:inputType="phone" />

        <EditText
            android:id="@+id/txtelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefone"
            android:inputType="phone" />

        <EditText
            android:id="@+id/txendereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="EndereÃ§o"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/txbairro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Bairro"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/txcidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Cidade"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/txestado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Estado"
            android:inputType="textCapCharacters" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLimpar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Limpar" />

            <Button
                android:id="@+id/btnSalvar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Salvar" />

            <Button
                android:id="@+id/btnExcluir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Excluir" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".Cadastro">

            <ListView
                android:id="@+id/listViewPessoas"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
